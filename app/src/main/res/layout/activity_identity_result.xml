<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f8f9"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_index_margin"
    android:paddingRight="@dimen/dp_index_margin">

    <include layout="@layout/layout_top" />

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:background="@drawable/shadow_67_white"
        android:orientation="vertical"
        android:padding="@dimen/dp30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identification"
            android:textColor="#ff25294e"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王晓欧"
                android:textColor="#ff9ea9c3"
                android:textSize="13sp" />

            <View
                android:layout_marginLeft="7dp"
                android:layout_width="1dp"
                android:layout_height="13sp"
                android:layout_gravity="center_vertical"
                android:background="#FF9EA9C3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="11************81"
                android:textColor="#ff9ea9c3"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mIvSuccess"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_sucess" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/mIvSuccess"
                android:text="Successfully verified"
                android:textColor="#ffed773c"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_identify_idcard" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>