<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="474dp"
    android:background="@drawable/popup_shape"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_index_margin"
    android:paddingRight="@dimen/dp_index_margin">

    <TextView
        android:id="@+id/mTvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:drawableTop="@drawable/ic_arrow_down"
        android:padding="@dimen/dp_5"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="100.00 CNY"
        android:textColor="#ff25294e"
        android:textSize="@dimen/sp30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp30"
        android:text="Total received"
        android:textColor="#ff9ea9c3"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/shape_et_bg"
            android:drawablePadding="@dimen/dp20"
            android:text="Payment method"
            android:textColor="#ff9ea9c3"
            android:textSize="16sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alipay"
            android:textColor="#ff25294e"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/shape_et_bg"
            android:drawablePadding="@dimen/dp20"
            android:text="Payment method"
            android:textColor="#ff9ea9c3"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="56,410.00  CNY/BTC"
            android:textColor="#ff25294e"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/shape_et_bg"
            android:drawablePadding="@dimen/dp20"
            android:text="Payment method"
            android:textColor="#ff9ea9c3"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.001772BTC"
            android:textColor="#ff25294e"
            android:textSize="18sp" />
    </RelativeLayout>
    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/mBtnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp25"
        android:background="@drawable/shape_btn_get"
        android:elevation="5dp"
        android:shadowColor="#5cabafc3"
        android:shadowDx="4"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Confirm purchase"
        android:textColor="@color/white" />
</LinearLayout>