<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_buy2"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_lingyu"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        tl:tl_indicator_color="@color/default_color"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="36dp"
        tl:tl_indicator_style="NORMAL"
        tl:tl_indicator_margin_top="8dp"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_tab_padding="@dimen/dp_15"
        tl:tl_textSelectColor="@color/default_color"
        tl:tl_textUnselectColor="@color/unselect_style_2"
        tl:tl_textsize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>