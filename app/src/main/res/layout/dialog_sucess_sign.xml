<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/shadow_one"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_60"
    android:paddingRight="@dimen/dp_60"
    >

        <TextView
            android:id="@+id/mTvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_12"
            android:drawableTop="@drawable/ic_arrow_down"
            android:padding="@dimen/dp_5"
            android:textSize="10sp" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30"
            android:src="@drawable/ic_sucess"
            android:layout_width="46dp"
            android:layout_height="46dp" />

        <TextView
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations on\nyour successful registration"
            android:textColor="#ffed773c"
            android:textSize="18sp"
            />
        <Button
            android:layout_marginBottom="48dp"
            android:id="@+id/mBtnCB"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_btn_get"
            android:elevation="5dp"
            android:shadowColor="#5cabafc3"
            android:shadowDx="4"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Continue browsing"
            android:textColor="@color/white" />

</LinearLayout>