<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_index_margin"
    android:paddingRight="@dimen/dp_index_margin">

    <include layout="@layout/layout_top" />

    <include layout="@layout/top_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/shadow_x6_y7"
        android:orientation="vertical"
        android:paddingLeft="56dp"
        android:paddingTop="24dp"
        android:paddingRight="56dp"
        android:paddingBottom="30dp"
        android:shadowColor="#5cabafc3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shape_card_type_one" />

                    <TextView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@drawable/shape_card_type_one" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shape_card_type_one" />

                    <TextView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@drawable/shape_card_type_one" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shape_card_type_one" />

                    <TextView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@drawable/shape_card_type_one" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_idcard_photo" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_card_type_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15" />
    </LinearLayout>

    <Button
        android:id="@+id/mBtnComplete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_btn_get"
        android:elevation="5dp"
        android:shadowColor="#5cabafc3"
        android:shadowDx="4"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Complete"
        android:textColor="@color/white" />
</LinearLayout>